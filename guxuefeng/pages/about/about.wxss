.page {
  height: 100%;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  margin-bottom: 50px;
}

.item {
  height: 110px;
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 5px;
  margin: 5px;
  background-color: rgb(241, 241, 241);
}

.picture {
  flex-grow: 0;
}

image {
  width: 60px;
  height: 85px;
}

.introduction {
  display: flex;
  flex-direction: column;
  flex-grow: 4;
  padding-left: 10px;
  /* padding-right:20px; */
  height: 85px;
  width: 240px;
}

.purchase {
  display: flex;
  flex-direction: column;
  flex-grow: 1;
  height: 85px;
  width: 50px;
  align-items: center;
}

.text1 {
  font-size: 18px;
}

.text2 {
  font-size: 14px;
  margin-top: 8px;
}

.text3 {
  font-size: 14px;
  margin-top: 6px;
}

.text4 {
  font-size: 14px;
  color: red;
  padding-left: 3px;
}

.text5 {
  font-size: 14px;
  color: green;
  border: 1px solid green;
  border-radius: 4px;
  padding: 4px;
  margin-top: 35px;
}

.text6 {
  font-size: 15px;
  color: red;
}

.text7 {
  font-size: 15px;
  color: black;
}

.item2 {
  position: fixed;
  bottom: 0px;
  width: 100%;
  height: 50px;
  display: flex;
  flex-direction: row;
  align-items: center;
  background: white;
}

.positionLeft {
  background-color: white;
  display: flex;
  flex-grow: 3;
  justify-content: flex-start;
  padding-left: 20px;
}

.positionRight {
  display: flex;
  flex-grow: 1;
  height: 100%;
  background-color: rgb(228, 227, 227);
  align-items: center;
  justify-content: center;
}

.dot {
  position: absolute;
  font-size: 15px;
  color: white;
  top: -5px;
  right: 25px;
  width: 20px;
  height: 20px;
  background: red;
  border-radius: 50%;
  margin-bottom: 10px;
  text-align: center;
}
