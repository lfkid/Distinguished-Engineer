.item {
  height: 100px;
  display: flex;
  margin-top: 10px;
  /* align-items: center; */
}

.item-left {
  margin-left: 10px;
}

.item-middle {
  display: flex;
  flex-grow: 1;
  flex-direction: column;
  /*align-items: flex-start;*/
  margin-left: 10px;
  justify-content: space-around;
}

.item-right {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  /*margin-right: 5px;*/
  margin-left: 10px;
}

image {
  width: 80px;
  height: 100px;
  background-color: #eee;
}

.text-title {
  font-size: 16px;
  color: black;
}

.text-description {
  font-size: 14px;
  color: rgb(41, 39, 39);
}

.text-performer {
  font-size: 12px;
  color: rgb(61, 60, 60);
  /* margin-top: 30px; */
}

.text-score {
  margin-left: 5px;
  font-size: 20px;
  color: rgb(241, 12, 12);
}

button {
  margin-right: 9px;
  font-size: 10px;
}

.checkOutBar {
  position: fixed;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  bottom: 0px;
  background-color: rgb(211, 203, 203);
  width: 100%;
  height: 30px;
}

.cart {
  margin-left: 0px;
  height: 30px;
  background-color: yellow;
  font-size: 20px;
  /*width: 20px;*/
}

.checkOut {
  margin-right: 0px;
  height: 30px;
  background-color: red;
  font-size: 20px;
}

.circle {
  position: fixed;
  bottom:20px;
  right: 0px;
  height: 20px;
  width: 20px;
  border-radius: 50%;
  background-color: rgb(35, 219, 35);
}
.num{
  margin-left:5px;
  justify-content:center;
  font-size: 15px;
}
