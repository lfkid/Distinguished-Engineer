/* pages/about/about.wxss */

.movie-list {
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  height: 100%;
  margin-bottom: 120rpx;
}

.movie-item {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  height: 240rpx;
  padding-left: 15rpx;
  margin: 10rpx;
  border: 2rpx solid #f1f1f1;
}

.item-left {
  display: flex;
  flex-direction: row;
  width: 80%;
}

image {
  display: block;
  width: 120rpx;
  height: 180rpx;
  margin-right: 20rpx;
}

.desc {
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}

.item-right {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  height: 180rpx;
  padding-right: 15rpx;
}

.title {
  font-size: 36rpx;
  color: black;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}

.subtitle {
  font-size: 28rpx;
  color: #666;
  text-overflow: ellipsis;
}

.actor {
  margin-top: 50rpx;
  font-size: 28rpx;
  color: #666;
}

.score {
  color: red;
  font-size: 28rpx;
}

.action {
  padding: 4rpx 8rpx;
  font-size: 28rpx;
  color: #29cc6d;
  border: 2rpx solid #29cc6d;
  border-radius: 8rpx;
}

.footer-fixed {
  position: fixed;
  z-index: 1;
  bottom: 0;
  left: 0;
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 100%;
  height: 120rpx;
  background-color: #e6e6e6;
}

.shopping-cart {
  width: 80%;
}

.cart-bubble {
  position: absolute;
  z-index: 1;
  top: 20rpx;
  right: 360rpx;
  width: 36rpx;
  height: 36rpx;
  text-align: center;
  font-size: 24rpx;
  color: white;
  border-radius: 50%;
  background-color: red;
}

.cart-text {
  text-align: center;
}

/* 结算 */

.settle {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 20%;
  height: 122rpx;
  color: white;
  background-color: red;
}

.settle-text {
  font-weight: bold;
}
