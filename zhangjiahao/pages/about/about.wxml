<!--pages/about/about.wxml-->
<template name="movieSelet">
  <view class="movieSingle">
    <view class = "img-mes">
      <view>
        <image src="/asserts/images/movie/world.jfif" class = "img"></image>
      </view>
      <view class="message">
        <text class = "message-name">{{name}}</text>
        <text class = "message-intorduce">{{introduce}}</text>
        <text class = "message-actor">{{actor}}</text>
      </view>
    </view>
    <view class = "grade-buy">
      <text class = "grade">{{score}}</text>
      <navigator url="../buy/buy" hover-class="navigator-hover">
        <button class = "buttonBuy" type="primary" plain="true" >购票</button>
      </navigator>
    </view>
  </view>
</template>
<view class = "movieList">
  <view class="headLine">
    <view class="movieKind">
      <view class="hoting1">
        <text class = "hoting">热映</text>
        <view class ="underLine" hidden="{{true}}"></view>
      </view>
      <view class="waiting1">
        <text class = "waiting">待映</text>
        <view class ="underLine"></view>
      </view>
    </view>
  </view>
  <block wx:for="{{movie}}">
    <template is="movieSelet" data="{{...item}}"></template>
  </block>
</view>


<view class = "bottomBar">
  <view class ="shopCart">
    <text class ="CartText">购物车</text>
    <text class ="CartNum">1</text>
  </view>
  <view class = "account">
    <text class ="accText">结算</text>
  </view>
</view>

